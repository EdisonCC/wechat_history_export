{
    "manifest_version": 2,
    "name": "WechatExporter",
    "version": "1.0",
    "description": "把某个公众号的历史文章全部导出为 Excel 表格或 PDF 文档。",
    "icons": {
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions" : [
        "declarativeContent",
        "https://mp.weixin.qq.com/",
        "activeTab",
        "tabs"
      ],    
    "page_action": {
        "default_icon": "images/icon-19.png",
        "default_title": "微信公众号文章导出",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    }
}